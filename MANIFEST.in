# Include package data
include README.md
include LICENSE
include requirements.txt

# Include documentation
recursive-include docs *.md
recursive-include docs *.yaml
recursive-include docs *.yml

# Include configuration examples
recursive-include config *.yaml
recursive-include config *.yml
recursive-include examples *.yaml
recursive-include examples *.yml

# Include assets and icons
recursive-include assets *.svg
recursive-include assets *.json
recursive-include assets *.md

# Include test files
recursive-include tests *.py
recursive-include tests *.yaml
recursive-include tests *.yml

# Include source code
recursive-include src *.py
recursive-include src *.typed

# Exclude compiled Python files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *~
global-exclude *.so
global-exclude .DS_Store
global-exclude __pycache__
